<Window x:Class="Windows.Matic.v1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows.Matic.v1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Icon="Resources\Matic.ico">
    <DockPanel>
        <Border 
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="1">
            <StackPanel DockPanel.Dock="Left">
                <Button Margin="10" Click="Button_Click_Tasks">Tasks</Button>
                <Button Margin="10" Click="Button_Click_Schedule">Schedule</Button>
            </StackPanel>
        </Border>
        <ContentControl x:Name="contentControl"/>
    </DockPanel>
</Window>
